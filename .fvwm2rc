+               "Network%menu"  Popup Networkmenu 
+               "security%menu" Popup Securitymenu
+               "office%menu"   Popup Editmenu
+               "other%menu"    Popup Othermenu
+               "Fvwm%menu"     Popup Fvwmmenu 
+               ""                              Nop
+               "xkill%menu"    Exec exec xkill
+               "restart%menu"  Restart fvwm2
+               "exit%menu"     Quit
+               "reboot%menu"   Exec exec sudo /sbin/reboot 
